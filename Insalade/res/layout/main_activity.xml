<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
        >

    <!--Start topbar-->
    <RelativeLayout android:id="@+id/headerMenu"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:background="#222222">

        <TextView android:id="@+id/menuButton"
                  android:layout_width="60dp"
                  android:layout_height="fill_parent"
                  android:text="MENUconf"
                  android:background="@color/activeDayButtonColor"
                  android:layout_alignParentLeft="true"/>

        <TextView android:id="@+id/insalade_logo"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:text="MENU"
                  android:background="@color/closedTickMark"
                  android:layout_toLeftOf="@+id/eventButton"
                  android:layout_toRightOf="@id/menuButton"
                  android:onClick="onClickHeaderText"
                  android:clickable="true"/>

        <ImageButton android:id="@id/eventButton"
                     android:layout_width="60dp"
                     android:layout_height="fill_parent"
                     android:text="MENUev"
                     android:background="@color/defaultTickmark"
                     android:layout_alignParentRight="true"
                     android:onClick="onCLickEventButton"/>
    </RelativeLayout>
    <!--End topbar-->

    <LinearLayout android:id="@+id/navigationButtonList"
                  android:layout_width="fill_parent"
                  android:layout_height="60dp"
                  android:orientation="horizontal"
                  android:background="#ff0000"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="40dp"
                  android:orientation="horizontal">

        <View android:id="@+id/triangle"
              android:layout_width="55dp"
              android:layout_height="55dp"
              android:rotation="180"
              android:background="@drawable/triangle" />
    </LinearLayout>


    <android.support.v4.view.ViewPager android:id="@+id/pager"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
            />

</LinearLayout>