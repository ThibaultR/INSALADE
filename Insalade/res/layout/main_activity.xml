<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
        >

    <!--Start topbar-->
    <RelativeLayout android:id="@+id/headerMenu"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#222222">
        <TextView android:id="@+id/menuButton"
                  android:layout_width="60dp"
                  android:layout_height="fill_parent"
                  android:text="MENU"
                  android:background="@color/activeDayButtonColor"
                  android:layout_alignParentLeft="true"/>
        <TextView android:id="@+id/insalade_logo"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:text="MENU"
                  android:background="@color/closedTickMark"
                  android:layout_toLeftOf="@+id/eventButton"
                  android:layout_toRightOf="@id/menuButton"/>
        <TextView android:id="@id/eventButton"
                  android:layout_width="60dp"
                  android:layout_height="fill_parent"
                  android:text="MENU"
                  android:background="@color/defaultTickmark"
                  android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <!--End topbar-->

    <LinearLayout android:id="@+id/navigationButtonList"
                  android:layout_width="fill_parent"
                  android:layout_height="60dp"
                  android:orientation="horizontal"
                  android:background="#ff0000"/>

    <android.support.v4.view.ViewPager android:id="@+id/pager"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
            />

</LinearLayout>