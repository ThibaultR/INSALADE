{% extends '::layout.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">Post</div>

        <table class="record_properties table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Association</th>
                    <td>{{ entity.association }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ entity.title }}</td>
                </tr>
                <tr>
                    <th>Text</th>
                    <td>{{ entity.pushText }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ entity.imageUrl }}</td>
                </tr>
                <tr>
                    <th>Start Date</th>
                    <td>{{ entity.dateStart|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>End Date</th>
                    <td>{{ entity.dateEnd|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Creation Date</th>
                    <td>{{ entity.dateCreate|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ entity.state }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <ul class="record_actions list-group col-md-4 center-block float-none">
        <li class="list-group-item">
            <a href="{{ path('post') }}" class="btn btn-info center-block">
                Back to the list
            </a>
        </li>
        <li class="list-group-item">
            <a href="{{ path('post_edit', { 'id': entity.id }) }}" class="btn btn-warning center-block">
                Edit
            </a>
        </li>
        <li class="list-group-item">
            <a href="{{ path('post_delete', { 'id': entity.id }) }}" class="btn btn-danger center-block">
                Delete
            </a>
        </li>
    </ul>
{% endblock content %}
